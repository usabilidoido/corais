// Schema updates.

// Update the module weight to 2 so hs_taxonomy runs after the forum module.
// See http://drupal.org/node/475784.
function hs_taxonomy_update_1() {
  $ret = array();

  $ret[] = update_sql("UPDATE {system} SET weight = 2 WHERE name = 'hs_taxonomy'");

  return $ret;
}

